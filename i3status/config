general {
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

cpu_usage {
    format = "%usage"
}

cpu_temperature 0 {
    format = "%degrees Â°C"
}

memory {
    format = "%used/%available"
}

wireless _first_ {
    format_up = "W: %ip (%quality %essid)"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
    low_threshold = 10
}

tztime local {
    format = "%d-%m-%Y %H:%M:%S"
}

volume master {
    format = "%volume"
    format_muted = "muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
